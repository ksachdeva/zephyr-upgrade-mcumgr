/ {
     aliases {
             led0 = &led0;
     };

     leds {
             compatible = "gpio-leds";
             led0: led_0 {
                     gpios = <&gpio0 0 GPIO_ACTIVE_HIGH>;
                     label = "Simulated LED 0";
             };
     };
};

&gpio0 {
     status = "okay";
     ngpios = <32>;
};
